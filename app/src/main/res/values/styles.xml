<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MadarInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_mid</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/light</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>


    <style name="button_primary_r7" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_6sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="marginHorizontal">@dimen/_16sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/madar_orange</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

</resources>